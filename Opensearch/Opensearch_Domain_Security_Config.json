{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": "es:*",
      "Resource": "arn:aws:es:<your-region>:<your-account-id>:domain/<your-domain-name>/*"
    },
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::<your-account-id>:role/<your-iam-role>"
      },
      "Action": "es:*",
      "Resource": "arn:aws:es:<your-region>:<your-account-id>:domain/<your-domain-name>/*"
    }
  ]
}
